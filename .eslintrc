{
    "parser": "babel-eslint",
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "extends": "xo",
    "rules": {
        "semi": "off",
        "indent": ["warn", 4],
        "comma-dangle": "off",
        "object-curly-spacing": "off",
        "no-unused-vars": "warn",
        "arrow-parens": "off",
        "no-promise-executor-return": "off",
        "operator-linebreak": "off",
        "capitalized-comments": "off"
    }
}
